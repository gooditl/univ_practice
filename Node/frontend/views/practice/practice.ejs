<script>
    /**
     *
     * http://127.0.0.1:15555/api/schedule/category?number1=10&number2=12&cal_type=plus
     * 22
     */
    function doSomething() {
        const number1 = document.querySelector('#number1').value;
        const number2 = document.querySelector('#number2').value;
        const cal_type = document.querySelector('#cal_type').value;

        const url = 'http://127.0.0.1:15555/api/practice?' +
            'number1=' + number1 + '' +
            '&number2=' + number2 + '' +
            '&cal_type=' + cal_type;

        console.log(url);

        $.ajax({
            method: 'GET',
            url: url,
            dataType: "json",
            success: function(response) {
                console.log(response)
                alert(response.result)
            },
            error: function(err) {
                alert(err.responseJSON.message)
            }
        })
    }

    function insertCategory() {

        const name_name = document.querySelector('input[name="category_name"]').value;

        const params = {name: idName};

        $.ajax({
            method: 'post',
            url: url,
            dataType: "json",
            contentType : 'application/json',
            data: JSON.stringify(params),
            success: function(response) {
                console.log(response)
            },
            error: function(err) {
                console.log(err);
            }
        })
    }


</script>

